@media $at-least-desktop {
    .mini-app {
        margin-top: $vertical-tile-margin;
    }
    [data-page-type~=newpop] {
        .feed {
            max-width: $desktop-content;

            .app-list {
                padding-bottom: 40px;
                max-width: $desktop-content;

                li {
                    float: left;
                    margin-right: 20px;
                    width: 335px;

                    &.mini-app {
                        background-color: #fff;
                        border-radius: 5px;
                        height: 80px;
                        padding: 10px;
                    }
                    &:nth-child(2n) {
                        margin-right: 0;
                    }
                    &.loadmore {
                        clear: both;
                        width: $desktop-content;
                    }
                }
            }
            .multi-app-tile.mkt-tile {
                background-color: transparent;
                box-shadow: none;
                max-width: $desktop-content;
                padding: 0;

                .app-list {
                    width: $desktop-content;

                    .fragment-error {
                        background-color: transparent;
                        display: inline-block;
                        padding: 20px;
                    }
                }
                > .icon {
                    display: none;
                }
                > .info {
                    height: 30px;
                    margin-left: 0;
                    width: 100%;

                    h1 {
                        font-size: 24px;
                        line-height: 24px;
                    }
                }
            }
            .placeholder {
                clear: both;
            }
        }
    }
}

.collection-landing-promo,
.shelf-landing {
    .feed {
        padding-top: 0;
        max-width: 100%;
    }
    .detail-item {
        margin-left: 10px;
        width: $mobile-tile-width;

        &.header-block {
            margin-top: 0;
        }
    }
    .feed-item {
        border-radius: 0;
    }
}

@media $at-least-desktop {
    .collection-landing-listing .feed-tile-header-wrap {
        margin-bottom: $vertical-tile-margin;
    }
    .collection-landing-listing .desc {
        border-radius: 5px;
    }
    .collection-landing-promo,
    .shelf-landing {
        section.feed-item {
            border-radius: 5px 5px 0 0;
        }
        p.desc {
            border-radius: 0 0 5px 5px;
        }
    }
}

.collection-landing-promo,
.shelf-landing {
    .desc {
        background: #fff;
        box-shadow: 0 2px 1px -1px $cement-gray;
        margin-bottom: $vertical-tile-margin;
    }
}

.fanchor,
.app-link {
    &:hover,
    &:active {
        text-decoration: none;
    }
}

.loadmore.feed-item-item {
    // Put loadmore button on its own row.
    margin-bottom: 0;
    max-width: 100%;
    padding-bottom: 12px;
    padding-top: 15px;
    width: 100%;

    button {
        width: 620px;
    }
}

@media (max-width: 321px) {
    .collection-landing,
    .shelf-landing {
        .header-block,
        .feed-item {
            margin-left: 0;
            width: $feed-column-width;
        }
    }
}
@media (min-width: 321px) {
